<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LibraryProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LibraryProject"
    Shell.FlyoutBehavior="Disabled"
    Shell.TitleColor="White"
    Shell.BackgroundColor="#3399ff">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>
    <ShellContent
        Title="Registration Page"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />
    <ShellContent
        Title="Branch Selection"
        ContentTemplate="{DataTemplate local:BranchSelectionPage}"
        Route="BranchSelectionPage" />
    <ShellContent
        Title="Admin Registration"
        ContentTemplate="{DataTemplate local:AdminRegistrationPage}"
        Route="AdminRegistrationPage" />
    <ShellContent
        Title="Add Branch"
        ContentTemplate="{DataTemplate local:AddBranchPage}"
        Route="AddBranchPage" />
    <ShellContent
        Title="Library"
        ContentTemplate="{DataTemplate local:LibraryPage}"
        Route="LibraryPage" />

</Shell>
